@model Evidence_07_Mid_Monthly.Models.IdentityModel
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-10 offset-2">
        <h2>Login Form</h2>
    </div>
</div>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-10 offset-2 text-danger my-4">
            @Html.ValidationSummary(true)
        </div>

    </div>
    <div class="row mb-1">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.UserName, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="row mb-1">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Password, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="row mb-1">
        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-sm btn-outline-primary">Login</button>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-10 offset-2">
            <p>If you don't have an account now<a href="@Url.Action("Register","Account")" class="btn btn-link fw-bold">Create new account</a></p>
        </div>
    </div>

}
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}